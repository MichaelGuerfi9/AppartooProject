{% extends 'base.html.twig' %}

{% block body %}
    <h1>Contacts</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.contact_id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('contacts_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('contacts_edit', { 'id': contact.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
